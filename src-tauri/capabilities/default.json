{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$APPCACHE/**" },
        { "path": "$APPDATA/**" }
      ]
    }
  ]
}
